<section id="renderers" class="py-24 px-6">
  <div class="container mx-auto max-w-6xl">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold font-display mb-4 tracking-tight">
        One Scene Graph, <span class="text-gradient">Multiple Renderers</span>
      </h2>
      <p class="text-base-content/60 max-w-2xl mx-auto text-lg">
        Write your scene logic once. Render with Three.js for immersive 3D WebGL
        experiences, or SVG for lightweight, scalable 2D vector graphics.
      </p>
    </div>

    <!-- Renderer comparison -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Three.js card -->
      <div class="glass-card rounded-2xl overflow-hidden group">
        <div class="aspect-video relative renderer-preview flex items-center justify-center">
          <!-- 3D cube wireframe illustration -->
          <svg viewBox="0 0 200 200" class="w-32 h-32 opacity-60 group-hover:opacity-100 transition-opacity duration-500">
            <g transform="translate(100,100)" stroke="currentColor" fill="none" stroke-width="1.5" class="text-purple-400">
              <!-- Front face -->
              <path d="M-35,-35 L35,-35 L35,35 L-35,35 Z" />
              <!-- Back face -->
              <path d="M-20,-50 L50,-50 L50,20 L-20,20 Z" opacity="0.4" />
              <!-- Connecting edges -->
              <line x1="-35" y1="-35" x2="-20" y2="-50" opacity="0.4" />
              <line x1="35" y1="-35" x2="50" y2="-50" opacity="0.4" />
              <line x1="35" y1="35" x2="50" y2="20" opacity="0.4" />
              <!-- Glow center -->
              <circle cx="0" cy="0" r="4" fill="currentColor" opacity="0.6" />
            </g>
          </svg>
          <!-- Label -->
          <div class="absolute bottom-4 left-4">
            <span class="badge badge-primary badge-sm font-mono">WebGL</span>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-display font-semibold mb-2 flex items-center gap-2">
            Three.js Renderer
            <span class="badge badge-outline badge-xs">3D</span>
          </h3>
          <p class="text-base-content/60 text-sm leading-relaxed">
            Full 3D rendering powered by Three.js and WebGL. Support for perspective
            and orthographic cameras, PBR materials, glTF model loading, and real-time
            interaction events.
          </p>
        </div>
      </div>

      <!-- SVG card -->
      <div class="glass-card rounded-2xl overflow-hidden group">
        <div class="aspect-video relative renderer-preview flex items-center justify-center">
          <!-- SVG generative art illustration -->
          <svg viewBox="0 0 200 200" class="w-32 h-32 opacity-60 group-hover:opacity-100 transition-opacity duration-500">
            <g transform="translate(100,100)" stroke="currentColor" fill="none" stroke-width="1" class="text-cyan-400">
              <circle cx="0" cy="0" r="20" opacity="0.8" />
              <circle cx="0" cy="0" r="35" opacity="0.6" />
              <circle cx="0" cy="0" r="50" opacity="0.4" />
              <circle cx="0" cy="0" r="65" opacity="0.2" />
              <line x1="-60" y1="0" x2="60" y2="0" opacity="0.3" />
              <line x1="0" y1="-60" x2="0" y2="60" opacity="0.3" />
              <line x1="-42" y1="-42" x2="42" y2="42" opacity="0.2" />
              <line x1="42" y1="-42" x2="-42" y2="42" opacity="0.2" />
              <circle cx="0" cy="0" r="3" fill="currentColor" opacity="0.8" />
            </g>
          </svg>
          <!-- Label -->
          <div class="absolute bottom-4 left-4">
            <span class="badge badge-accent badge-sm font-mono">Vector</span>
          </div>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-display font-semibold mb-2 flex items-center gap-2">
            SVG Renderer
            <span class="badge badge-outline badge-xs">2D</span>
          </h3>
          <p class="text-base-content/60 text-sm leading-relaxed">
            Lightweight vector graphics rendering. Perfect for generative art,
            data visualization, interactive diagrams, and resolution-independent
            graphics with CSS styling support.
          </p>
        </div>
      </div>
    </div>

    <!-- Same code, different output -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-3 glass-card rounded-full px-6 py-3">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
          <path d="m5 12 7-7 7 7"/>
          <path d="M12 19V5"/>
        </svg>
        <span class="text-sm text-base-content/70">
          Same scene graph â€” just swap the renderer
        </span>
      </div>
    </div>
  </div>
</section>
