<section id="hero" class="relative min-h-screen flex items-center justify-center pt-16 overflow-hidden">
  <!-- Extra gradient blobs for hero -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[900px] h-[500px] rounded-full bg-primary/10 blur-[160px]"></div>
  </div>

  <div class="container mx-auto px-6 text-center max-w-5xl">
    <!-- Version badge -->
    <div class="hero-anim inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-base-300/60 bg-base-200/30 backdrop-blur-sm text-sm text-base-content/70 mb-8">
      <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
      v0.3.0 â€” SVG Interactive & Generative Art
    </div>

    <!-- Main heading -->
    <h1 class="hero-anim text-4xl sm:text-5xl md:text-7xl font-bold font-display leading-[1.1] mb-6 tracking-tight">
      <span class="text-gradient">Engine-Agnostic</span>
      <br />
      <span class="text-base-content">2D/3D Graphics</span>
      <br />
      <span class="text-base-content/60">for the Web</span>
    </h1>

    <!-- Subtitle -->
    <p class="hero-anim text-base sm:text-lg md:text-xl text-base-content/60 max-w-2xl mx-auto mb-10 leading-relaxed">
      A TypeScript-first scene graph library that decouples your graphics logic
      from the rendering engine. Build once, render anywhere.
    </p>

    <!-- CTAs -->
    <div class="hero-anim flex flex-wrap justify-center gap-4 mb-12">
      <a href="/docs/getting-started" class="btn btn-primary btn-lg gap-2 font-display font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20"/>
        </svg>
        Get Started
      </a>
      <a
        href="https://github.com/andersonur/oroya-animate"
        target="_blank"
        rel="noopener"
        class="btn btn-outline btn-lg gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </a>
    </div>

    <!-- Install command -->
    <div class="hero-anim inline-block w-full max-w-lg">
      <div class="mockup-code terminal-dark text-left">
        <pre data-prefix="$" class="text-sm"><code class="font-mono">pnpm add @oroya/core @oroya/renderer-three</code></pre>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="mt-16 animate-bounce opacity-40">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto">
        <path d="m6 9 6 6 6-6"/>
      </svg>
    </div>
  </div>
</section>
